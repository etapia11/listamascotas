<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listamascotas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation = "vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/miactionbar"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content"
            android:id="@+id/mascotafoto"
            android:src="@drawable/perros_1"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation = "horizontal"
            android:weightSum="1">
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btnlike"
                android:background="@drawable/dog_bone_50"
                android:layout_alignParentLeft="true"


                />

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/mascotanombre"
                android:textSize="30dp"
                android:textAlignment="center"

                android:layout_weight="0.91" />


            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/contador"
                android:text="0"


                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btnhueso2"
                android:background="@drawable/dog_bone_48"
                android:layout_alignParentRight="true"

                />


        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>